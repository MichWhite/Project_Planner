<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/RelativeLayout1"
android:layout_width="fill_parent"
android:padding="8dp" >


    <TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="0"
android:id="@+id/projectId"
android:layout_marginLeft="10dp"
android:layout_marginRight="10dp"
android:layout_alignBaseline="@+id/textView8"
android:layout_alignBottom="@+id/textView8"
android:layout_alignParentStart="true" />

    <TextView
        android:text="Project Members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_below="@+id/row_address"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:layout_margin="5dp" />

    <TextView
        android:text="n/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:id="@+id/row_MemberNames"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <Button
    android:layout_width="30dp"
    android:layout_height="40dp"
    android:id="@+id/deleteButton"
    android:background="@drawable/ic_delete_black_24dp"
        android:focusable="false"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="n/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_address"
        android:layout_below="@+id/textView12"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_margin="2dp" />

    <TextView
        android:text="Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/textView12"
        android:textStyle="normal|bold"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Project Name"
    android:id="@+id/textView8"
    android:layout_gravity="center_horizontal"
    android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="n/a"
android:id="@+id/row_projectName"
android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true" />

    <TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="0"
android:id="@+id/row_NoOfSteps"
android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView11"
    android:layout_gravity="center_horizontal"
    android:textStyle="bold"
    android:text="Number of Members"
        android:layout_below="@+id/row_NoOfSteps"
        android:layout_alignStart="@+id/textView9" />

    <TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="0"
android:id="@+id/row_NoOfMember"
android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/row_NoOfSteps" />

    <TextView
    android:text="Start Date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/MoreInfo"

    android:layout_gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
    android:textStyle="bold"
    android:textSize="14sp"
        android:layout_below="@+id/row_NoOfMember"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:text="End Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textStyle="normal|bold"
        android:layout_below="@+id/MoreInfo"
        android:layout_toStartOf="@+id/textView10" />

    <TextView
        android:text="n/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_endDate"
        android:layout_below="@+id/row_startDate"
        android:layout_alignStart="@+id/row_startDate" />

    <TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="n/a"
android:id="@+id/row_startDate"
android:layout_gravity="center_horizontal"
        android:layout_below="@+id/row_NoOfMember"
        android:layout_toEndOf="@+id/textView11" />

    <TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Type of Construction"
android:id="@+id/textView9"
android:layout_gravity="center_horizontal"
android:textStyle="bold"
        android:layout_below="@+id/row_projectName"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
